<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="File" fileName="target/logs/selenium.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Logger dla Cucumbera -->
        <Logger name="io.cucumber" level="info" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Logger dla JUnit -->
        <Logger name="org.junit" level="info" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Logger dla Selenium -->
        <Logger name="org.openqa.selenium" level="info" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Logger dla caÅ‚ej aplikacji -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>